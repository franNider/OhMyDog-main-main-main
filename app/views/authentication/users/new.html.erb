<%= form_with(model: @user) do |form| %>
  <% @user.errors.full_messages.each do |error| %>
    <div>
      <%= error %>
    </div>
  <% end %>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :dni %>
    <%= form.number_field :dni %>
  </div>

    <div>
        <%= form.label :nombre %>
        <%= form.text_field :nombre %>
    </div>

    <div>
        <%= form.label :apellido %>
        <%= form.text_field :apellido %>
    </div>

    <div> 
         <%= form.select :rol, ["Usuario", "Administrador"]%>
    </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  

  <div>
    <%= form.submit %>
  </div>
<% end %>